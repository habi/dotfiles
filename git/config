[alias]
	dt = difftool
	l = log --graph --pretty=format:'%C(yellow)%h%Creset%C(green)%d%Creset %C(white dim)%s%Creset %C(white)%an, %ar%Creset'
	s = status -s # short status
	st = status
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short	
[core]
	editor = vim
	excludesfile = ~/.gitignore
	whitespace = blank-at-eol,blank-at-eof,space-before-tab,cr-at-eol
	autocrlf = input
	attributesfile = ~/.gitattributes
	filemode = false
	hooksPath = .git/hooks
[apply]
	whitespace = fix
[color]
	ui = true
[init]
	templatedir = ~/.git_template
	defaultBranch = main
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[safe]
     directory = *	
	
# Below is from https://blog.gitbutler.com/how-git-core-devs-configure-git/	
# clearly makes git better
[column]
        ui = auto
[branch]
        sort = -committerdate
[tag]
        sort = version:refname
[init]
        defaultBranch = main
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[fetch]
        prune = true
        pruneTags = true
        all = true

